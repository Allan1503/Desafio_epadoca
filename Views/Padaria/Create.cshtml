@model Desafio_epadoca.Models.Padaria
@using Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Cadastro de Padaria</h2>

@using (Html.BeginForm("Create", "Padaria", FormMethod.Post, new { @class = "form" }))
{
    @Html.ValidationSummary()

    <div class="form-group">
        @Html.LabelFor(model => model.Nome)
        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.InformacoesCadastrais)
        @Html.EditorFor(model => model.InformacoesCadastrais, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.InformacoesCadastrais, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Endereco)
        @Html.EditorFor(model => model.Endereco, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Endereco, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
}
